<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ProductDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imgLeftProductDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/white"
                android:src="@drawable/arrowleft"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imgShareProductDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_22sdp"
                android:layout_marginEnd="@dimen/_28sdp"
                android:background="@color/white"
                android:src="@drawable/Share"
                app:layout_constraintEnd_toStartOf="@id/imgWishProductDetail"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imgWishProductDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@color/white"
                android:src="@drawable/wishlist"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/ivProductDetail"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/imgShareProductDetail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/_20sdp"
                android:src="@drawable/illustration"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/ivProductDetail"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="@dimen/_15sdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="How many beatifuls girl of the earth"
                android:textStyle="bold"
                android:textSize="@dimen/_18sdp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                android:layout_margin="@dimen/_15sdp"
                android:text="Thái đẹp trai"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/tvAuthor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:text="Trên trái đất này loài người đã phát triển hàng triệu năm nhưng không 1 ai có đc niềm tin tuyệt dối vào sức mạnh của tinh têu"
                android:layout_height="0dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</FrameLayout>